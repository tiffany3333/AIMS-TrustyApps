
@model IEnumerable<AIMS.Data.SurveyInstance>

@{
    ViewBag.Title = "Survey Report";
}

<h2>@ViewBag.SurveyName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SurveyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyId)
            </td>
            <td>
                @Html.ActionLink(item.UserId.ToString(), "../User/Details", new { id = item.UserId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @if (item.IsCompleted)
                {
                    @Html.ActionLink("Answers", "Details", new { surveyInstanceId = item.SurveyInstanceId }) 
                }
            </td>
        </tr>
    }

</table>
