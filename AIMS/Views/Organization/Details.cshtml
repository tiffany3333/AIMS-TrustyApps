    <p>
        <button class="btn-aims-submit" onclick="location.href='@Url.Action("Edit", "Organization", new { organizationId = Model.OrganizationId }, null)'">Edit</button> |
        <button class="btn-aims-submit" onclick="location.href='@Url.Action("Index")'">Go Back</button> |
        <button class="btn-aims-submit" onclick="location.href='@Url.Action("Delete", "Organization", new { organizationId = Model.OrganizationId }, null)'">Delete</button> 
    </p>
    <hr />
    <h4>Groups</h4>
    <p>
        <button class="btn-aims-submit" onclick="location.href='@Url.Action("Create", "Group", new { organizationId = Model.OrganizationId }, null)'">Create New</button>
    </p>
    <dl class="dl-horizontal">
        @foreach (var group in Model.Groups)
        {
            <dt>
                Group
            </dt>

            <dd>
                @Html.ActionLink(@group.Name, "Edit", "Group", new { id = group.GroupId }, null)
            </dd>

            <dd>
                @Html.ActionLink("Delete", "Delete", "Group", new { id = group.GroupId}, null)
            </dd>
        }
     </dl>
